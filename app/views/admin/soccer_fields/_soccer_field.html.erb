<li id="soccer_field-<%= soccer_field.id %>">
  <%= link_to gravatar_for(soccer_field, size: Settings.image.avatar.size), soccer_field %>
  <span class="name"><%= link_to soccer_field.name, admin_soccer_field_path(soccer_field) %></span>
  <div class="content">
    <%= soccer_field.address %>
  </div>
  <%= link_to t("delete"), admin_soccer_field_path(soccer_field), method: :delete, data: { confirm: t("you_sure") } %>
</li>
